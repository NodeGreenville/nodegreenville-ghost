<nav class="nav">
    {{#if @blog.logo}}
        <a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
        {{else}}
            <span class="blog-logo"><a href="{{@blog.url}}">(ng)</a></span>
    {{/if}}

    <ul>
        {{#foreach navigation}}
            <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}" role="presentation"><a href="{{url absolute="true"}}">{{label}}</a></li>
        {{/foreach}}
            <li><a class="btn btn--join" href="//meetup.com/nodegreenville">Sign Up</a></li>
    </ul>
</nav>
